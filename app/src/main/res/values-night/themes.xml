<resources>
    <!-- Base application theme. -->
    <!-- Customize your dark theme here. -->
    <style name="Base.Theme.BookShelfApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="colorPrimary">@color/colorA1CCD1</item>
        <item name="colorSecondary">@color/colorD1A6A1</item>
        <item name="colorAccent">@color/color01939A</item>

        <item name="colorOnPrimary">@color/color444444</item>
    </style>

    <style name="Theme.BookShelfApp" parent="Base.Theme.BookShelfApp" />

    <style name="HeadingTopBarTextViewTheme">
        <item name="android:textSize">@dimen/_20sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="HeadingTextViewTheme">
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="_12spTextViewTheme">
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="DefaultTextViewTheme">
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_8sdp</item>
    </style>
</resources>